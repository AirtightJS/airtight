{
    "extends": [
        "@nodescript/eslint-config"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            2,
            4,
            {
                "ignoredNodes": [ "PropertyDefinition[decorators]", "TSUnionType", "TSIntersectionType", "TSConditionalType", "TSTypeReference"
                ],
                "SwitchCase": 1,
                "FunctionExpression": {
                    "parameters": "off"
                }
            }
        ]
    }
}
